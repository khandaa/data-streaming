# Docker environment variables for the SQS Simulator backend
# Copy this file to .env.docker and update the values as needed

# Flask configuration
FLASK_APP=src/app.py
FLASK_DEBUG=0
LOG_LEVEL=INFO

# Kafka configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC=sqs-data
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# AWS configuration (for SQS simulation)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SQS_QUEUE_URL=
SQS_SUBNET_ID=
VPC_ID=
